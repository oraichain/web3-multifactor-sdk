{
  "root": true,
  // "extends": ["@toruslabs/typescript"],
  "extends": [
    "plugin:@typescript-eslint/recommended"
  ],
  "plugins": [
    "@typescript-eslint",
    "mocha",
    "import"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 11,
    "project": "./tsconfig.json"
  },
  "globals": {
    "atob": true,
    "btoa": true,
    "document": true,
    "fetch": true,
    "jest": true,
    "it": true,
    "beforeEach": true,
    "afterEach": true,
    "describe": true,
    "expect": true,
    "chrome": true,
    "FileSystem": true,
    "FileEntry": true
  },
  "overrides": [
    {
      "files": [
        "*.js",
        "*.ts",
        "*.tsx"
      ],
      "rules": {
        "prefer-const": "warn",
        "mocha/max-top-level-suites": "off",
        "mocha/no-setup-in-describe": "off",
        "@typescript-eslint/no-empty-function": "warn"
      }
    }
  ]
}
